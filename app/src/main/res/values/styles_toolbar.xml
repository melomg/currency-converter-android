<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ToolBarStyle">
		<item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="contentInsetLeft">0dp</item>
		<item name="contentInsetStart">0dp</item>
	</style>

	<style name="ToolBar"/>

	<style name="ToolBar.Title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_marginStart">@dimen/toolbar_title_start_margin_size</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:singleLine">true</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">@dimen/toolbar_title_text_size</item>
		<item name="android:textColor">@color/text_dark</item>
		<item name="fontFamily">sans-serif-medium</item>
	</style>

</resources>
